@model ServiceViewModel

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8 mx-auto mt-4">
            <div class="card">
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="Id" class="form-control" id="Id" >

                        <div class="form-group">
                            <label for="Icon">Image</label>
                            <input type="text" asp-for="Icon" class="form-control" id="Icon" placeholder="Enter Image">
                        </div>

                        <div class="form-group">
                            <label for="Title">Title</label>
                            <input type="text" asp-for="Title" class="form-control" id="Title" placeholder="Enter Title">
                        </div>

                        <div class="form-group">
                            <label for="Description">Description</label>
                            <input type="text" class="form-control" asp-for="Description" id="Description" placeholder="Enter Description">
                        </div>


                        <div class="d-flex justify-content-between">
                            <a class="btn btn-danger w-50 mt-2 mr-2" href="/Admin/Service">Turn Back</a>
                            <button type="submit" class="btn btn-primary w-50 mt-2 ml-2">Add Service</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>