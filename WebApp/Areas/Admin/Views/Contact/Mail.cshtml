@model MailViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col-md-11 mx-auto">
            <div class="card">
                <div class="card-body">
                    @await Component.InvokeAsync("WebApp.Areas.Admin.Components.Contact._ContactNavPartial")

                    <div class="email-right-box">

                        <div class="compose-content ">
                            <form method="post">

                                <div class="form-group">
                                    <input type="text" asp-for="receiverMail" class="form-control bg-transparent" placeholder=" Alıcı Mail Adresi">
                                </div>

                                <div class="form-group">
                                    <input type="text" asp-for="Subject" class="form-control bg-transparent" placeholder=" Konu">
                                </div>

                                <div class="form-group">
                                    <textarea asp-for="Body" class="textarea_editor form-control bg-light" rows="15" placeholder="Mesajınız ..."></textarea>
                                </div>

                                <div class="text-left m-t-15">

                                    <button type="submit" class="btn btn-primary m-b-30 m-t-15 f-s-14 p-l-20 p-r-20 m-r-10">
                                        <i class="fa fa-paper-plane m-r-5"></i>
                                        Send
                                    </button>

                                    <a href="/Admin/Contact/Send" class="btn btn-dark m-b-30 m-t-15 f-s-14 p-l-20 p-r-20" type="button"><i class="ti-close m-r-5 f-s-12"></i> Discard</a>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>