
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8 mx-auto mt-4">
            <div class="card">
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" name="id" class="form-control" value="@Model.Id">

                        <div class="form-group">
                            <label for="roleName">Role Name</label>
                            <input type="text" name="Name" class="form-control" id="roleName" placeholder="Enter Role Name" value="@Model.Name">
                        </div>

                        <div class="d-flex justify-content-between">
                            <a class="btn btn-danger w-50 mt-2 mr-2" href="/Admin/Role">Turn Back</a>
                            <button type="submit" class="btn btn-primary w-50 mt-2 ml-2">Update Role</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>