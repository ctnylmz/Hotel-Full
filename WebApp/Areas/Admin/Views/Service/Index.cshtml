@model List<ServiceViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-11 mx-auto m-4">
    <a href="/Admin/Service/Add" class="btn btn-primary w-100 my-4">Add New Service</a>

    <div class="card">
        <div class="card-body">
            <div class="card-title">
                <h4>Service List</h4>
            </div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Operations</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var service in Model)
                        {
                            <tr>
                                <td>@service.Icon</td>
                                <td>@service.Title</td>
                                <td>@service.Description</td>
                                <td>
                                    <a href="/Admin/Service/Delete/@service.Id" class="btn btn-danger mr-2">Delete</a>
                                    <a href="/Admin/Service/Update/@service.Id" class="btn btn-primary">Update</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
