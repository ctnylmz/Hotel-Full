@model BookingViewModel

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8 mx-auto mt-4">
            <div class="card">
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="id" class="form-control" id="id">

                        <div class="form-group">
                            <label for="name">name</label>
                            <input type="text" asp-for="name" class="form-control" id="name" placeholder="Enter name">
                        </div>

                        <div class="form-group">
                            <label for="mail">mail</label>
                            <input type="text" asp-for="mail" class="form-control" id="mail" placeholder="Enter mail">
                        </div>

                        <div class="form-group">
                            <input type="hidden" asp-for="checkin" class="form-control" id="checkin" placeholder="Enter checkin">
                        </div>

                        <div class="form-group">
                            <input type="hidden" asp-for="checkOut" class="form-control" id="checkOut" placeholder="Enter checkOut">
                        </div>

                        <div class="form-group">
                            <input type="hidden" class="form-control" asp-for="adultCount" id="adultCount" placeholder="Enter adultCount">
                        </div>

                        <div class="form-group">
                            <input type="hidden" asp-for="childCount" class="form-control" id="childCount" placeholder="Enter childCount">
                        </div>

                        <div class="form-group">
                            <input type="hidden" asp-for="roomCount" class="form-control" id="roomCount" placeholder="Enter roomCount">
                        </div>

                        <div class="form-group">
                            <input type="hidden" asp-for="specialRequest" class="form-control" id="specialRequest" placeholder="Enter specialRequest">
                        </div>

                        <div class="form-group">
                            <label for="status">Status</label>
                            <select asp-for="status" class="form-control" id="status">
                                <option value="Onay Bekliyor">Onay Bekliyor</option>
                                <option value="İptal Et">İptal Et</option>
                                <option value="Beklemede">Beklemede</option>
                            </select>
                        </div>


                        <div class="form-group">
                            <label for="description">description</label>
                            <input type="text" class="form-control" asp-for="description" id="description" placeholder="Enter description">
                        </div>


                        <div class="d-flex justify-content-between">
                            <a class="btn btn-danger w-50 mt-2 mr-2" href="/Admin/Booking">Turn Back</a>
                            <button type="submit" class="btn btn-primary w-50 mt-2 ml-2">Update Booking</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>