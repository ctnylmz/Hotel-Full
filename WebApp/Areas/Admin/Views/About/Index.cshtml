@model AboutViewModel
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-11 mx-auto mt-4">
            <div class="card">
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="id" class="form-control" id="id" >
                        <div class="form-group">
                            <label for="title">TITLE</label>
                            <input type="text" asp-for="title" class="form-control" id="title" placeholder="Enter title">
                        </div>

                        <div class="form-group">
                            <label for="description">DESCRİPTİON</label>
                            <textarea type="text" asp-for="description" rows="4" class="form-control" id="description" ></textarea>
                          
                        </div>

                        <div class="form-group">
                            <label for="roomCount">ROOM COUNT</label>
                            <input type="text" class="form-control" asp-for="roomCount" id="roomCount" placeholder="Enter roomCount">
                        </div>

                        <div class="form-group">
                            <label for="customerCount">CUSTOMER COUNT</label>
                            <input type="text" class="form-control" asp-for="customerCount" id="customerCount" placeholder="Enter customerCount">
                        </div>

                        <div class="form-group">
                            <label for="staffCount">STAFF COUNT</label>
                            <input type="text" class="form-control" asp-for="staffCount" id="staffCount" placeholder="Enter staffCount">
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary w-100 mt-2 ml-2">Update About</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>